pipeline{

    agent{
        docker{
            image 'node:8.16.0-alpine'
            args '-v $HOME/.m2:/root/.m2'
        }
    }   

    stages{
        stage("Build") {
            steps{
                echo "Building a project"
                dir('result'){
                    sh "npm install"
                }
            }
        }
        stage("Test") {
            steps{
                echo "Testing the project"
                dir('result'){
                    sh "npm test"
                }
            }
        }
    }

    post{
        always{
            echo "Pipeline execution is complete...."
        }
    }

}

pipeline{

    agent any

    tools {
        nodejs 'nodejs8.16'
    }

    stages{
        stage("Build") {
            steps{
                echo "Building a project"
                dir('result'){
                    sh "npm install"
                }
            }
        }
        stage("Test") {
            steps{
                echo "Testing the project"
                dir('result'){
                    sh "npm test"
                }
            }
        }
    }

    post{
        always{
            echo "Pipeline execution is complete...."
        }
    }

}
